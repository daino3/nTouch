<script class="interaction-data-script">

  var friend_data = <%= raw(@graph_data.to_json) %>

  var render_chart = function() {
      $('#friend-' + friend_data['friend_uid'] + ' .chart').highcharts({
        chart: {
            type: 'bar'
        },
        title: {
            text: 'Mentions Last 3 Months',
            style: {
                      font: 'normal 14px Verdana, sans-serif',
                    }
        },
        xAxis: {
            categories: ['Facebook', 'Twitter'],
            title: {
                text: null
            }
        },
        yAxis: {
            min: 0,
            labels: {
                overflow: 'justify'
            }
        },
        plotOptions: {
            bar: {
                dataLabels: {
                    enabled: true
                }
            }
        },
        credits: {
            enabled: false
        },
        series: [{
            name: 'Friend',
            data: [parseInt(friend_data['friend']), 15]
        }, {
            name: 'Me',
            data: [parseInt(friend_data['me']), 7]
        }]
    });
  }

  render_chart()
</script>